<h1><%= @user.username %>'s Profile Page</h1>

<h2>
  Events organized by User</h2>
<div class="container">
  <div class="row">
    <% @user.organize_events.each do |event| %>
      <div class="card col-3 m-2 shadow-sm rounded">
        <h4>
          <%= link_to event.title, event, class: 'card-title' %>
        </h4>
        <div class="card-body">
          <p><%= event.body %></p>
          <p><%= event.date %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% if EventAttendee.where(attendee_id:@user.id).empty? %>
  <h2>
    User is not attending any events
  </h2>
<% else %>
  <h2>
    Events User is attending
  </h2>
  <div class="container">
    <div class="row">
      <% EventAttendee.where(attendee_id:@user.id).each do |event_relation| %>
        <% event = Event.find(event_relation.attend_event_id) %>
          <div class="card col-3 m-2 shadow-sm rounded">
            <h4>
              <%= link_to event.title, event, class: 'card-title' %>
            </h4>
            <div class="card-body">
              <p><%= event.body %></p>
              <p><%= event.date %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
